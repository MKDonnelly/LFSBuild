FORCE_UNSAFE_CONFIGURE=1 \
./configure \
      --prefix=/usr            \
      --enable-no-install-program=kill,uptime > /dev/null
peif
FORCE_UNSAFE_CONFIGURE=1 make > /dev/null
peif
rit make NON_ROOT_USERNAME=nobody check-root 2> $cl/6.51coreutils > /dev/null
echo "dummy:x:1000:nobody" >> /etc/group
chown -R nobody .
rit su nobody -s /bin/bash -c "PATH=$PATH make RUN_EXPENSIVE_TESTS=yes check" 2> $cl/6.51coreutils > /dev/null
sed -i '/dummy/d' /etc/group
make DESTDIR=/linkpak/coreutils install > /dev/null
peif

mkdir /linkpak/coreutils/usr/sbin /linkpak/coreutils/usr/share/man8/
mv /linkpak/coreutils/usr/bin/chroot /linkpak/coreutils/usr/sbin/
mv /linkpak/coreutils/usr/share/man/man1/chroot.1 /linkpak/coreutils/usr/share/man8/chroot.8
sed -i s/\"1\"/\"8\"/1 /linkpak/coreutils/usr/share/man/man8/chroot.8

#When installing coreutils, /usr/bin/ln will be temporarily unavailable.
#Utilize /tools/bin/ln when doing this
PATH=/tools/bin/ /usr/sbin/linkpak coreutils
cs
\rm -Rf coreutils-8.27
echo -e '(6.51) Done Building Coreutils\n'


