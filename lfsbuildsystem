#!/bin/bash

#Compile lfs chapter 6
#Direct the output to a file for
#later reference in case anything goes wrong
#Linkpak is used to manager installed packages
mkdir /linkpak

#Run if Tests
function rit(){
   if [[ "$RUN_TESTS" == 1 ]]
   then
      #Run the command given
      $@
   fi
}

#Convenietelly move to the source directory
function cs(){
  cd /sources/
}

cs

#This is where the logs are stored if
#testing is enabled
cl=/sources/logs
mkdir -p $cl

#Previous Exit If Fail. Exits if the previous command returned
#a non-zero status. 
function peif(){
   if [[ "$?" != "0" ]]
   then
      echo ALERT ALERT ALERT ALERT
      echo FAILED AT 
      caller
      exit 1
   fi
}

#6.5 Creating directories
echo -e '\n(6.5-6) Creating directory structure\n'
mkdir /{boot,etc,home,mnt,var}
install -d -m 0750 /root
install -d -m 1777 /tmp /var/tmp
mkdir -p /usr/{,local/}{bin,include,lib,sbin,lib64}
ln -s usr/bin /bin
ln -s usr/sbin /sbin
ln -s usr/lib /lib
ln -s usr/lib64 /lib64
mkdir -p /usr/{,local/}share/{doc,info,locale,man}
mkdir /usr/{,local/}share/{misc,terminfo,zoneinfo}
mkdir  /usr/libexec
mkdir -p /usr/{,local/}share/man/man{1..8}

mkdir /var/log
ln -s /run /var/run
ln -s /run/lock /var/lock
mkdir -p /var/{cache,lib/locate,local}

ln -s /tools/bin/{bash,cat,dd,echo,ln,pwd,rm,stty} /bin
ln -s /tools/bin/{install,perl} /usr/bin
ln -s /tools/lib/libgcc_s.so{,.1} /usr/lib
ln -s /tools/lib/libstdc++.{a,so{,.6}} /usr/lib
sed 's/tools/usr/' /tools/lib/libstdc++.la > /usr/lib/libstdc++.la
for lib in blkid lzma mount uuid
do
    ln -s /tools/lib/lib$lib.{a,so*} /usr/lib
    sed 's/tools/usr/' /tools/lib/lib${lib}.la > /usr/lib/lib${lib}.la
done
ln -s bash /bin/sh

ln -s /proc/self/mounts /etc/mtab
cat > /etc/passwd <<"EOF"
root:x:0:0:root:/root:/bin/bash
bin:x:1:1:bin:/dev/null:/bin/false
daemon:x:6:6:Daemon User:/dev/null:/bin/false
messagebus:x:18:18:D-Bus Message Daemon User:/var/run/dbus:/bin/false
systemd-bus-proxy:x:72:72:systemd Bus Proxy:/:/bin/false
systemd-journal-gateway:x:73:73:systemd Journal Gateway:/:/bin/false
systemd-journal-remote:x:74:74:systemd Journal Remote:/:/bin/false
systemd-journal-upload:x:75:75:systemd Journal Upload:/:/bin/false
systemd-network:x:76:76:systemd Network Management:/:/bin/false
systemd-resolve:x:77:77:systemd Resolver:/:/bin/false
systemd-timesync:x:78:78:systemd Time Synchronization:/:/bin/false
systemd-coredump:x:79:79:systemd Core Dumper:/:/bin/false
nobody:x:99:99:Unprivileged User:/dev/null:/bin/false
EOF

cat > /etc/group <<"EOF"
root:x:0:
bin:x:1:daemon
sys:x:2:
kmem:x:3:
tape:x:4:
tty:x:5:
daemon:x:6:
floppy:x:7:
disk:x:8:
lp:x:9:
dialout:x:10:
audio:x:11:
video:x:12:
utmp:x:13:
usb:x:14:
cdrom:x:15:
adm:x:16:
messagebus:x:18:
systemd-journal:x:23:
input:x:24:
mail:x:34:
systemd-bus-proxy:x:72:
systemd-journal-gateway:x:73:
systemd-journal-remote:x:74:
systemd-journal-upload:x:75:
systemd-network:x:76:
systemd-resolve:x:77:
systemd-timesync:x:78:
systemd-coredump:x:79:
nogroup:x:99:
users:x:999:
EOF

touch /var/log/{btmp,lastlog,faillog,wtmp}
chgrp utmp /var/log/lastlog
chmod 664  /var/log/lastlog
chmod 600  /var/log/btmp


#L6.7 Linux API Headers
echo -e '\n(6.7) Building Linux API Headers'
tar -xf linux-4.12.7.tar.xz
peif
cd linux-4.12.7
peif
mkdir -p /linkpak/linux-api/usr/include/

make mrproper > /dev/null
peif

make INSTALL_HDR_PATH=dest headers_install > /dev/null
peif
find dest/include \( -name .install -o -name ..install.cmd \) -delete
peif
cp -r dest/include/* /linkpak/linux-api/usr/include/
peif

linkpak -f linux-api
cs
\rm -Rf linux-4.12.7
echo -e '(6.7) Done Building Linux API Headers\n'


#L6.8 Man-pages
echo -e '\n(6.8) Building Man-pages'
tar -xf man-pages-4.12.tar.xz
peif
cd man-pages-4.12
mkdir /linkpak/man-pages

make DESTDIR=/linkpak/man-pages install > /dev/null
peif

linkpak -f man-pages
cs
\rm -Rf man-pages-4.12
echo -e '(6.8) Done Building Man-pages\n'


#L6.9 Glibc
echo -e '\n(6.9) Building Glibc'
tar -xf glibc-2.26.tar.xz
peif
cd glibc-2.26
peif
mkdir /linkpak/glibc

patch -Np1 -i ../glibc-2.26-fhs-1.patch
peif
ln -sf /tools/lib/gcc /usr/lib
peif

case $(uname -m) in
    i?86)    GCC_INCDIR=/usr/lib/gcc/$(uname -m)-pc-linux-gnu/7.2.0/include
	     ln -sf ld-linux.so.2 /lib/ld-lsb.so.3
	     ;;
    x86_64) GCC_INCDIR=/usr/lib/gcc/x86_64-pc-linux-gnu/7.2.0/include
	    ln -sf ../lib/ld-linux-x86-64.so.2 /lib64
	    ln -sf ../lib/ld-linux-x86-64.so.2 /lib64/ld-lsb-x86-64.so.3
	    ;;
esac

rm -f /usr/include/limits.h
peif

mkdir build
peif
cd build
peif

CC="gcc -isystem $GCC_INCDIR -isystem /usr/include" \
../configure --prefix=/usr               \
  --disable-werror                       \
  --enable-kernel=3.2                    \
  --enable-stack-protector=strong        \
  libc_cv_slibdir=/lib > /dev/null
peif
unset GCC_INCDIR

make -j$MAKEJFLAG > /dev/null
peif
rit echo -e '\nTesting glibc'
rit make check 2> $cl/6.9glibc > /dev/null

touch /etc/ld.so.conf
peif
sed '/test-installation/s@$(PERL)@echo not running@' -i ../Makefile
peif
make DESTDIR=/linkpak/glibc install > /dev/null
peif

mkdir /linkpak/glibc/etc/
cp ../nscd/nscd.conf /linkpak/glibc/etc/nscd.conf
mkdir -p /linkpak/glibc/var/cache/nscd
install -Dm644 ../nscd/nscd.tmpfiles /linkpak/glibc/usr/lib/tmpfiles.d/nscd.conf
install -Dm644 ../nscd/nscd.service /linkpak/glibc/lib/systemd/system/nscd.service

linkpak -f glibc

mkdir -p /usr/lib/locale
#localedef -i cs_CZ -f UTF-8 cs_CZ.UTF-8
#localedef -i de_DE -f ISO-8859-1 de_DE
#localedef -i de_DE@euro -f ISO-8859-15 de_DE@euro
#localedef -i de_DE -f UTF-8 de_DE.UTF-8
#localedef -i en_GB -f UTF-8 en_GB.UTF-8
#localedef -i en_HK -f ISO-8859-1 en_HK
#localedef -i en_PH -f ISO-8859-1 en_PH
localedef -i en_US -f ISO-8859-1 en_US
localedef -i en_US -f UTF-8 en_US.UTF-8
#localedef -i es_MX -f ISO-8859-1 es_MX
#localedef -i fa_IR -f UTF-8 fa_IR
#localedef -i fr_FR -f ISO-8859-1 fr_FR
#localedef -i fr_FR@euro -f ISO-8859-15 fr_FR@euro
#localedef -i fr_FR -f UTF-8 fr_FR.UTF-8
#localedef -i it_IT -f ISO-8859-1 it_IT
#localedef -i it_IT -f UTF-8 it_IT.UTF-8
#localedef -i ja_JP -f EUC-JP ja_JP
#localedef -i ru_RU -f KOI8-R ru_RU.KOI8-R
#localedef -i ru_RU -f UTF-8 ru_RU.UTF-8
#localedef -i tr_TR -f UTF-8 tr_TR.UTF-8
#localedef -i zh_CN -f GB18030 zh_CN.GB18030

cat > /linkpak/glibc/etc/nsswitch.conf <<"EOF"
passwd: files
group: files
shadow: files

hosts: files dns
networks: files

protocols: files
services: files
ethers: files
rpc: files
EOF
peif

tar -xf ../../tzdata2017b.tar.gz

ZONEINFO=/usr/share/zoneinfo
mkdir -p $ZONEINFO/{posix,right}

for tz in etcetera southamerica northamerica europe africa antarctica  \
		   asia australasia backward pacificnew systemv; do
    zic -L /dev/null   -d $ZONEINFO       -y "sh yearistype.sh" ${tz}
    zic -L /dev/null   -d $ZONEINFO/posix -y "sh yearistype.sh" ${tz}
    zic -L leapseconds -d $ZONEINFO/right -y "sh yearistype.sh" ${tz}
done

cp zone.tab zone1970.tab iso3166.tab $ZONEINFO
zic -d $ZONEINFO -p America/New_York
unset ZONEINFO

ln -sf /usr/share/zoneinfo/US/Pacific /etc/localtime

echo -e '/usr/local/lib\n/opt/lib\ninclude /etc/ld.so.conf.d/*.conf' > \
     /etc/ld.so.conf
peif
mkdir -p /etc/ld.so.conf.d

cs
\rm -Rf glibc-2.26
echo -e '(6.9) Done Building Glibc\n'


#6.10 Adjust toolchain
echo -e '\n(6.10) Adjusting Toolchain'

mv /tools/bin/{ld,ld-old}
peif
mv /tools/$(uname -m)-pc-linux-gnu/bin/{ld,ld-old}
peif
mv /tools/bin/{ld-new,ld}
peif
ln -s /tools/bin/ld /tools/$(uname -m)-pc-linux-gnu/bin/ld
peif

echo -e '\nGcc dumpspects output: '
gcc -dumpspecs | sed -e 's@/tools@@g'                   \
		     -e '/\*startfile_prefix_spec:/{n;s@.*@/usr/lib/ @}' \
		     -e '/\*cpp:/{n;s@$@ -isystem /usr/include@}' >      \
		     `dirname $(gcc --print-libgcc-file-name)`/specs
peif

#Testing compiler
echo 'int main(){}' > dummy.c
cc dummy.c -v -Wl,--verbose &> dummy.log
readelf -l a.out | grep ': /lib'
peif

echo -e '\nCompiler log output: '
grep -o '/usr/lib.*/crt[1in].*succeeded' dummy.log
grep -B1 '^ /usr/include' dummy.log
grep 'SEARCH.*/usr/lib' dummy.log |sed 's|; |\n|g'
grep "/lib.*/libc.so.6 " dummy.log
grep found dummy.log
rm dummy.c a.out dummy.log
echo -e '(6.10) Done adjusting the toolchain\n'


#L6.11 Zlib
echo -e '\n(6.11) Building zlib'
tar -xf zlib-1.2.11.tar.xz
peif
cd zlib-1.2.11
peif
mkdir /linkpak/zlib/

./configure --prefix=/usr > /dev/null
peif
make -j$MAKEJFLAG > /dev/null
peif
rit make check 2> $cl/6.11zlib > /dev/null
make DESTDIR=/linkpak/zlib/ install > /dev/null
peif
ln -sf /linkpak/zlib/usr/lib/libz.so.1.2.11 /linkpak/zlib/usr/lib/libz.so

linkpak -f zlib
cs
\rm -Rf zlib-1.2.11
echo -e '(6.11) Done Building Zlib\n'


#L6.12 File
echo -e '\n(6.12) Building File'
tar -xf file-5.31.tar.gz
peif
cd file-5.31
peif
mkdir /linkpak/file

./configure --prefix=/usr > /dev/null
peif
make -j$MAKEJFLAG > /dev/null
peif
rit make check 2> $cl/6.12file > /dev/null
make DESTDIR=/linkpak/file install > /dev/null
peif

linkpak -f file
cs
\rm -Rf file-5.31
echo -e '(6.12) Done Building File\n'


#L6.13 Readline
echo -e '\n(6.13) Building Readline'
tar -xf readline-7.0.tar.gz
peif
cd readline-7.0
peif
mkdir /linkpak/readline

sed -i '/MV.*old/d' Makefile.in
peif
sed -i '/{OLDSUFF}/c:' support/shlib-install
peif

./configure --prefix=/usr    \
	    --disable-static \
	    --docdir=/usr/share/doc/readline-7.0 > /dev/null
peif
make SHLIB_LIBS="-L/tools/lib -lncursesw" > /dev/null
peif
make DESTDIR=/linkpak/readline SHLIB_LIBS="-L/tools/lib -lncurses" install > /dev/null
peif
ln -sf /linkpak/readline/usr/lib/libreadline.so.7 /linkpak/readline/usr/lib/libreadline.so
ln -sf /linkpak/readline/usr/lib/libhistory.so.7 /linkpak/readline/usr/lib/libhistory.so

linkpak -f readline
cs
\rm -Rf readline-7.0
echo -e '(6.13) Done Building Readline'


#L6.14 m4
echo -e '\n(6.14) Building m4'
tar -xf m4-1.4.18.tar.xz
peif
cd m4-1.4.18
peif
mkdir /linkpak/m4/

./configure --prefix=/usr > /dev/null
peif
make -j$MAKEJFLAG > /dev/null
peif
make DESTDIR=/linkpak/m4 install > /dev/null
peif

linkpak -f m4
cs
\rm -Rf m4-1.4.18
echo -e '(6.14) Done Building m4\n'


#L6.15 bc
echo -e '(6.15) Building bc'
tar -xf bc-1.07.1.tar.gz
peif
cd bc-1.07.1
peif
mkdir /linkpak/bc

cat > bc/fix-libmath_h <<"EOF"
#! /bin/bash
sed -e '1   s/^/{"/' \
    -e     's/$/",/' \
    -e '2,$ s/^/"/'  \
    -e   '$ d'       \
    -i libmath.h

sed -e '$ s/$/0}/' \
    -i libmath.h
EOF

ln -s /tools/lib/libncursesw.so.6 /usr/lib/libncursesw.so.6
peif
ln -sf libncurses.so.6 /usr/lib/libncurses.so
peif

sed -i -e '/flex/s/as_fn_error/: ;; # &/' configure
peif

./configure --prefix=/usr           \
	    --with-readline         \
	    --mandir=/usr/share/man \
	    --infodir=/usr/share/info > /dev/null
peif
make -j$MAKEJFLAG > /dev/null
peif
rit echo "quit" | ./bc/bc -l Test/checklib.b 2> $cl/6.15bc > /dev/null
make DESTDIR=/linkpak/bc/ install > /dev/null
peif

linkpak -f bc
cs
\rm -Rf bc-1.07.1
echo -e '(6.15) Done Building bc'


#L6.16 Binutils
echo -e '\n(6.16) Building Binutils'
tar -xf binutils-2.29.tar.bz2
peif
cd binutils-2.29
peif
mkdir /linkpak/binutils

expect -c "spawn ls" | grep spawn
peif

mkdir build
cd build
peif

../configure --prefix=/usr       \
	     --enable-gold       \
	     --enable-ld=default \
	     --enable-plugins    \
	     --enable-shared     \
	     --disable-werror    \
	     --with-system-zlib > /dev/null
peif
make tooldir=/usr -j$MAKEJFLAG > /dev/null
peif
rit make -k check 2> $cl/6.16binutils > /dev/null
make DESTDIR=/linkpak/binutils tooldir=/usr install > /dev/null
peif

linkpak -f binutils
cs
\rm -Rf binutils-2.29
echo -e '(6.16) Done Building Binutils\n'


#L6.17 gmp
echo -e '\n(6.17) Building GMP'
tar -xf gmp-6.1.2.tar.xz
peif
cd gmp-6.1.2
peif
mkdir /linkpak/gmp

./configure --prefix=/usr    \
	   --enable-cxx     \
	   --disable-static \
	   --docdir=/usr/share/doc/gmp-6.1.2 > /dev/null
peif
make -j$MAKEJFLAG > /dev/null
peif
rit make check 2> $cl/6.17gmp > /dev/null
rit awk '/# PASS:/{total+=$3} ; END{print total}' gmp-check-log
make DESTDIR=/linkpak/gmp install > /dev/null
peif

linkpak -f gmp
cs
\rm -Rf gmp-6.1.2
echo -e '(6.18) Done Building GMP'


#L6.18 MPFR
echo -e '\n(6.18) Building MPFR'
tar -xf mpfr-3.1.5.tar.xz
peif
cd mpfr-3.1.5
peif
mkdir /linkpak/mpfr

./configure --prefix=/usr        \
	    --disable-static     \
	    --enable-thread-safe \
	    --docdir=/usr/share/doc/mpfr-3.1.5 > /dev/null
peif
make -j$MAKEJFLAG > /dev/null
peif
rit make check 2> $cl/6.18mpfr > /dev/null
make DESTDIR=/linkpak/mpfr install > /dev/null
peif

linkpak -f mpfr
cs
\rm -Rf mpfr-3.1.5
echo -e '(6.18) Done Building MPFR\n'


#L6.19 MPC
echo -e '\n(6.19) Building MPC'
tar -xf mpc-1.0.3.tar.gz
peif
cd mpc-1.0.3
peif
mkdir /linkpak/mpc

./configure --prefix=/usr    \
	    --disable-static \
	    --docdir=/usr/share/doc/mpc-1.0.3 > /dev/null
peif
make -j$MAKEJFLAG > /dev/null
peif
rit make check 2> $cl/6.19mpc > /dev/null
make DESTDIR=/linkpak/mpc install > /dev/null
peif

linkpak -f mpc
cs
\rm -Rf mpc-1.0.3
peif
echo -e '(6.19) Done Building MPC\n'


#L6.20 GCC
echo -e '\n(6.20) Building GCC'
tar -xf gcc-7.2.0.tar.xz
peif
cd gcc-7.2.0
peif
mkdir /linkpak/gcc

case $(uname -m) in
    x86_64)
	sed -e '/m64=/s/lib64/lib/' \
	    -i.orig gcc/config/i386/t-linux64
	;;
esac

rm -f /usr/lib/gcc
mkdir build
cd build
peif

SED=sed                     \
../configure --prefix=/usr  \
   --enable-languages=c,c++ \
   --disable-multilib       \
   --disable-bootstrap      \
   --with-system-zlib > /dev/null
peif
make -j$MAKEJFLAG > /dev/null
peif
ulimit -s 32768
rit make -k check 2> $cl/6.20gcc > /dev/null
rit ../contrib/test_summary >> $cl/6.20gcc
make DESTDIR=/linkpak/gcc install > /dev/null
peif

mkdir /linkpak/gcc/lib
ln -s /linkpak/gcc/usr/bin/cpp /linkpak/gcc/lib/cpp

ln -s /linkpak/gcc/usr/bin/gcc /linkpak/gcc/usr/bin/cc

install -dm755 /linkpak/gcc/usr/lib/bfd-plugins

ln -sf /linkpak/gcc/usr/libexec/gcc/$(gcc -dumpmachine)/7.2.0/liblto_plugin.so \
   /linkpak/gcc/usr/lib/bfd-plugins/

linkpak -f gcc

#Test compiler
echo 'int main(){}' > dummy.c
cc dummy.c -v -Wl,--verbose &> dummy.log
readelf -l a.out | grep ': /lib'
grep -o '/usr/lib.*/crt[1in].*succeeded' dummy.log
grep -B4 '^ /usr/include' dummy.log
grep 'SEARCH.*/usr/lib' dummy.log |sed 's|; |\n|g'
grep "/lib.*/libc.so.6 " dummy.log
grep found dummy.log
rm dummy.c a.out dummy.log
mkdir -p /usr/share/gdb/auto-load/usr/lib
mv /usr/lib/*gdb.py /usr/share/gdb/auto-load/usr/lib

cs
\rm -Rf gcc-7.2.0
echo -e '(6.20) Done Building GCC\n'


#L6.21 Bzip2
echo -e '\n(6.21) Building Bzip2'
tar -xf bzip2-1.0.6.tar.gz
peif
cd bzip2-1.0.6
peif
mkdir /linkpak/bzip2

patch -Np1 -i ../bzip2-1.0.6-install_docs-1.patch
peif
sed -i 's@\(ln -s -f \)$(PREFIX)/bin/@\1@' Makefile
peif
sed -i "s@(PREFIX)/man@(PREFIX)/share/man@g" Makefile
peif

make -f Makefile-libbz2_so > /dev/null
peif
make clean > /dev/null
peif
make -j$MAKEJFLAG > /dev/null
peif
make PREFIX=/linkpak/bzip2/usr install > /dev/null 
peif

mkdir -p /linkpak/bzip2/bin /linkpak/bzip2/lib/
#cp bzip2-shared /bin/bzip2
cp bzip2-shared /linkpak/bzip2/bin/bzip2
peif
#cp -a libbz2.so* /lib/
cp -a libbz2.so* /linkpak/bzip2/lib/
peif
#ln -s /usr/lib/libbz2.so.1.0 /usr/lib/libbz2.so
ln -s /linkpak/bzip2/lib/libbz2.so.1.0 /linkpak/bzip2/lib/libbz2.so
peif
#rm /usr/bin/{bunzip2,bzcat}
rm /linkpak/bzip2/usr/bin/{bunzip2,bzcat}
peif

#ln -s /bin/bzip2 /bin/bunzip2
ln -s /linkpak/bzip2/bin/bzip2 /linkpak/bzip2/bin/bunzip2
#ln -s /bin/bzip2 /bin/bzcat
ln -s /linkpak/bzip2/bin/bzip2 /linkpak/bzip2/bin/bzcat

linkpak -f bzip2
cs
\rm -Rf bzip2-1.0.6
echo -e '(6.21) Done Building Bzip2\n'


#L6.22 Pkg-config
echo -e '\n(6.22) Building Pkg-config'
tar -xf pkg-config-0.29.2.tar.gz
peif
cd pkg-config-0.29.2
peif
mkdir /linkpak/pkg-config/

./configure --prefix=/usr              \
	    --with-internal-glib       \
	    --disable-host-tool        \
	    --docdir=/usr/share/doc/pkg-config-0.29.2 > /dev/null
peif
make -j$MAKEJFLAG > /dev/null
peif
rit make check 2> $cl/6.22pkgconfig > /dev/null
make DESTDIR=/linkpak/pkg-config install > /dev/null
peif

linkpak -f pkg-config
cs
\rm -Rf pkg-config-0.29.2
echo -e '(6.22) Done Building pkg-config\n'


#L6.23 Ncurses
echo -e '\n(6.23) Building Ncurses'
tar -xf ncurses-6.0.tar.gz
peif
cd ncurses-6.0
peif
mkdir /linkpak/ncurses

sed -i '/LIBTOOL_INSTALL/d' c++/Makefile.in
peif

./configure --prefix=/usr           \
	    --mandir=/usr/share/man \
	    --with-shared           \
	    --without-debug         \
	    --without-normal        \
	    --enable-pc-files       \
	    --enable-widec > /dev/null
peif
make -j$MAKEJFLAG > /dev/null
peif
make DESTDIR=/linkpak/ncurses install > /dev/null
peif

mkdir -p /linkpak/ncurses/usr/lib/pkgconfig/
peif
for lib in ncurses form panel menu ; do
    #rm -f /usr/lib/lib${lib}.so
    rm -f /linkpak/ncurses/usr/lib/lib${lib}.so
    echo "INPUT(-l${lib}w)" > /linkpak/ncurses/usr/lib/lib${lib}.so
    #ln -sf ${lib}w.pc /usr/lib/pkgconfig/${lib}.pc
    ln -sf ${lib}w.pc /linkpak/ncurses/usr/lib/pkgconfig/${lib}.pc
done

rm -vf /linkpak/ncurses/usr/lib/libcursesw.so
peif
echo "INPUT(-lncursesw)" > /linkpak/ncurses/usr/lib/libcursesw.so
peif
rm -f /linkpak/ncurses/usr/lib/libncurses.so
peif
echo "INPUT(-lncursesw)" > /linkpak/ncurses/usr/lib/libncurses.so
peif
ln -sfv ./libncurses.so /linkpak/ncurses/usr/lib/libcurses.so
peif

linkpak -f ncurses
cs
\rm -Rf ncurses-6.0
echo -e '(6.24) Done Building Ncurses\n'


